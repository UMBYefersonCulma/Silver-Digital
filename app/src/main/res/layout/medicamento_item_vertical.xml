<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_corner_background"
    android:layout_marginBottom="16dp">

    <!-- Medicamento 1 -->
    <LinearLayout
        android:id="@+id/linearLayoutMedicamento1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">

        <TextView
            android:id="@+id/tvNombreMedicamento1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Medicamento"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvDosisMedicamento1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosis: 12gm"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvHorarioMedicamento1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario: 23:06"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvFrecuenciaMedicamento1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frecuencia: Cada 8 horas"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvDiasSemanaMedicamento1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Días: Lunes, Miércoles, Viernes"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvObservaciones1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observaciones: Ninguna"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- Medicamento 2 -->
    <LinearLayout
        android:id="@+id/linearLayoutMedicamento2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvNombreMedicamento2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Medicamento"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvDosisMedicamento2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosis: 123"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvHorarioMedicamento2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario: 23:06"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvFrecuenciaMedicamento2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frecuencia: Cada 12 horas"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvDiasSemanaMedicamento2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Días: Martes, Jueves"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvObservaciones2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observaciones: Ninguna"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</LinearLayout>